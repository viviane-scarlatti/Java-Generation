public class Televisao {
	// informacoes sobre uma TV
	String  marca;
	int     voltagem;
	int     tamanho;
	boolean ligada;
	int     volume;
	int     canal;
	
	void switchPower() {
		ligada = !ligada;
		System.out.println("A TV "+marca+" está "+ ((ligada)?"ligada":"desligada"));
		// operador ternario de atribuicao condicional
		/*
		 *   (testeLogico)? <ValorSeTesteForVerdadeiro> : <ValorSeTesteForFalso>
		 *   
		 */
	}
	
	void aumentarVolume() {
		if (ligada = true) {
		volume++;
		System.out.println("A TV "+marca+" está no volume "+volume);
		if (volume>=10) {
			System.out.println("O volume está no máximo");
		}
		}
		else
			System.out.println("A TV está desligada");
	}
	
	void diminuirVolume() {
		volume--;
		System.out.println("A TV "+marca+" está no volume "+volume);
	}
	
	void avancarCanal() {
		
		
	}
	
	void voltarCanal() {
		
		
	}

}
